# NIFTY Options Arbitrage Bot - Environment Configuration
# ====================================================
#
# Copy this file to .env and configure your broker credentials
# IMPORTANT: Never commit .env to version control
#
# Supported brokers: ZERODHA, UPSTOX, GENERIC_BROKER

# BROKER SELECTION
# ================
BROKER_NAME=ZERODHA  # Choose: ZERODHA, UPSTOX, or GENERIC_BROKER

# BROKER API CREDENTIALS (Required)
# ================================
BROKER_API_KEY=your_api_key_here
BROKER_API_SECRET=your_api_secret_here
BROKER_BASE_URL=https://api.kite.trade  # Broker-specific API URL

# ZERODHA SPECIFIC (Required for ZERODHA broker)
# ===============================================
ZERODHA_ACCESS_TOKEN=your_access_token_here

# UPSTOX SPECIFIC (Required for UPSTOX broker)
# ============================================
UPSTOX_ACCESS_TOKEN=your_access_token_here

# GENERIC BROKER CONFIGURATION (Optional)
# =======================================
# For brokers with standard REST APIs
# Leave empty for ZERODHA or UPSTOX
GENERIC_BROKER_HEADERS={"Authorization": "Bearer your_token"}
GENERIC_BROKER_TIMEOUT=30
